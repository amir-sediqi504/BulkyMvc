@model IEnumerable<BulkyMvc.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                display Order
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td><a asp-controller="Categories" asp-action="Edit" asp-route-id="@obj.Id">Edit</a></td>
                <td><a asp-controller="Categories" asp-action="Delete" asp-route-id="@obj.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
